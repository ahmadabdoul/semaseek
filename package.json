{
  "name": "semaseek",
  "displayName": "SemaSeek - Semantic Code Search (Beta)",
  "description": "Natural-language semantic search for your codebase (beta).",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.70.0"
  },
  "icon": "icon.png",
  "main": "./out/extension.js",
  "repository": {"url": "https://github.com/ahmadabdoul/semaseek"},
  "publisher": "abdulkadir-ahmad",
  "activationEvents": [
    "onCommand:semanticSearch.indexWorkspace",
    "onCommand:semanticSearch.query",
    "onCommand:semanticSearch.clearIndex",
    "onCommand:semanticSearch.showStats",
    "onCommand:semanticSearch.setApiKey"
  ],
  "contributes": {
    "commands": [
      {
        "command": "semanticSearch.indexWorkspace",
        "title": "Semantic Search: Index Workspace"
      },
      {
        "command": "semanticSearch.query",
        "title": "Semantic Search: Query"
      },
      {
        "command": "semanticSearch.clearIndex",
        "title": "Semantic Search: Clear Index"
      },
      {
        "command": "semanticSearch.showStats",
        "title": "Semantic Search: Show Index Stats"
      },
      {
        "command": "semanticSearch.setApiKey",
        "title": "Semantic Search: Set API Key",
        "category": "Semantic Search"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SemaSeek - Semantic Search",
      "properties": {
        "semanticSearch.embeddingModel": {
          "type": "string",
          "default": "gemini-embedding-001",
          "description": "Embedding model to use for Gemini/GenAI. Change requires reindex."
        },
        "semanticSearch.batchSize": {
          "type": "number",
          "default": 20,
          "description": "Batch size for embedding requests. Tune for rate limits/costs."
        },
        "semanticSearch.enableHybridSearch": {
          "type": "boolean",
          "default": true,
          "description": "Enable hybrid search (semantic + keyword). If disabled, only semantic search will be used."
        },
        "semanticSearch.lexicalBoostWeight": {
          "type": "number",
          "default": 0.12,
          "description": "The weight to apply to keyword matches in hybrid search."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepublish": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.9.2",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "@lancedb/lancedb": "^0.5.0",
    "axios": "^1.11.0",
    "flexsearch": "0.7.31",
    "sqlite3": "^5.1.7",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-typescript": "^0.20.1"
  }
}
